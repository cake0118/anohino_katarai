<div class="container">
  <div class="row">
    <h1>編集画面</h1>
  </div>

  <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
  <div class="row mb-3">
    <div class="col-3">
      <div>ユーザーID</div>
    </div>
    <div class="col-3">
      <div><%= @user.id %></div>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :名前 %>
    </div>
    <div class="col-3">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :フリガナ %>
    </div>
    <div class="col-3">
      <%= f.text_field :name_kana, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :メールアドレス %>
    </div>
    <div class="col-3">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.label :ステータス %>
    </div>
    <div class="col-3">
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "有効", value: true %>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, "退会", value: false %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-3">
      <%= f.submit :変更を保存, class: 'btn btn-success w-100' %>
    </div>
  </div>
  <% end %>
</div>
