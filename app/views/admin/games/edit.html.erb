<div class="container">
  <div class="row">
    <h1>編集画面</h1>
  </div>
  <%= form_with model:@game, url:admin_game_path, local: true do |f| %>
    <div class="row mb-3">
      <div class="col-3">
        <%= f.label :タイトル %>
      </div>
      <div class="col-3">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">
        <%= f.label :フリガナ %>
      </div>
      <div class="col-3">
        <%= f.text_field :title_kana, id: "furigana-input", class: 'form-control' %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-3">
        <%= f.label :内容 %>
      </div>
      <div class="col-3">
        <%= f.text_area :body, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.label :headware_id, "ハード" %>
      </div>
      <div class ="col-3">
        <%= f.collection_select :headware_id, Headware.all, :id, :name, { promit: "選択してください" }, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-3">
        <%= f.submit :変更を保存, class: 'btn btn-success w-100' %>
      </div>
    </div>

  <% end %>

</div>