<div class="container">
  <div class="row">
    <div class="col-auto mr-auto">
      <h1><%= @group.title %></h1>
    </div>
    <div class="col-auto col-3">
      <%= button_to "退出する", leave_game_group_path(@group.game, @group), method: :delete, class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="row m-3">
    <h2>コメント一覧</h2>
  </div>

  <div class="row m-3">
    <table class="table">
      <tbody>
        <%= render partial: 'public/comments/comment', collection: @comments, as: :comment %>
      </tbody>
    </table>
  </div>

  <% if @user == current_user && current_user.email != 'guest@example.com' %>
    <div class="row m-3">
      <h2>コメント投稿</h2>
    </div>

    <div class="row m-3">
      <%= form_with url: game_group_comments_path(@group.game, @group), model: [@comment], remote: true do |f| %>
        <div class="row mb-3">
          <%= f.text_area :body, class: 'form-control', rows: 3, placeholder: 'コメントを入力してください。' %>
        </div>

        <div class="row mt-3">
          <%= f.submit '投稿', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <%# 非ログイン時とゲストログイン時は投稿できない %>
  <% end %>

</div>