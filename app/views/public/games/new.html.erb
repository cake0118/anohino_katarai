<div class="container">
  <div class="row">
    <h2>新規投稿</h2>
  </div>

  <div class="row">
    <%= form_with model: @game, url: games_path do |f| %>
      <div>
        <%= f.label :ゲーム名 %><br />
        <%= f.text_field :title, placeholder: "ゲーム名" %>
      </div>

      <div>
        <%= f.label :フリガナ %><br />
        <%= f.text_field :title_kana, id: "furigana-input", placeholder: "ゲーム名" %>
      </div>

      <div>
        <%= f.label :内容 %><br />
        <%= f.text_area :body, placeholder: "どのようなゲームか教えてね" %>
      </div>

      <div>
        <%= f.label :headware_id, "ハード" %>
        <%= f.collection_select :headware_id, Headware.all, :id, :name, { promit: "選択してください" }, class: 'form-control' %>
      </div>
      
      <div>
        <%= f.submit "投稿する", class: "btn btn-success" %>
      </div>

    <% end %>

  </div>

</div>